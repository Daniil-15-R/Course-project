<Window x:Class="Course_project.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_project"
        mc:Ignorable="d"
        Title="HomeScreen" Height="450" Width="800">
    <Grid Background="#d0e6a3">
        <UniformGrid Rows="2" Columns="5" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="5">
                <Button Click="DogButton_Click">
                    <Image Source="Images\icon_dog.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="1.Собаки" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="EmployeesButton_Click">
                    <Image Source="Images\icon_employe.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Сотрудники" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="MedicineButton_Click">
                    <Image Source="Images\icon_medicines.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Лекарства" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="FoodButton_Click">
                    <Image Source="Images\ikon_foot.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Еда для собак" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="NeedsButton_Click">
                    <Image Source="Images\icon_needs.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Нужды для приюта" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="FinanceButton_Click">
                    <Image Source="Images\icon_finance.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Финансовый учет" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="VacinButton_Click">
                    <Image Source="Images\icon_vaccination.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="График вакцинаций" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ParasiteButton_Click">
                    <Image Source="Images\icon_parasite.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="Обработка от паразитов" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="WalkingButton_Click">
                    <Image Source="Images\icon_walking.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="График выгулов" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="EventButton_Click">
                    <Image Source="Images\icon_event.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Text="График мероприятий" />
            </StackPanel>
        </UniformGrid>
        <Button Content="Назад" Click="Back_Click" Width="100" Height="50" Margin="641,297,59,87"/>
    </Grid>
</Window>
