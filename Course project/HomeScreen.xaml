<Window x:Class="Course_project.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_project"
        mc:Ignorable="d"
        Title="HomeScreen" Height="450" Width="800">
    <Grid Style="{StaticResource MyCustomGrid}">
        <Frame x:Name="MainFrame"/>
        <UniformGrid Rows="2" Columns="5" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel  Margin="5">
                <Button Name="DogButton" Style="{StaticResource MyCustomButton}" Click="DogButton_Click">
                    <Image Source="Images/icon_dog.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Name="DogBlock" Style="{StaticResource MyCustomTextBlock}" Text="1. Собаки" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="EmployeesButton" Style="{StaticResource MyCustomButton}" Click="EmployeesButton_Click">
                    <Image Source="Images/icon_employe.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="EmployeesBlock" Style="{StaticResource MyCustomTextBlock}" Text="2. Сотрудники" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="MedicineButton" Style="{StaticResource MyCustomButton}" Click="MedicineButton_Click">
                    <Image Source="Images/icon_medicines.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock Name="MedicineBlock" Style="{StaticResource MyCustomTextBlock}" Text="3. Лекарства" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="FoodButton" Style="{StaticResource MyCustomButton}" Click="FoodButton_Click">
                    <Image Source="Images/ikon_foot.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="FoodBlock" Style="{StaticResource MyCustomTextBlock}" Text="4. Еда для собак" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="NeedsButton" Style="{StaticResource MyCustomButton}" Click="NeedsButton_Click">
                    <Image Source="Images/icon_needs.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="NeedsBlock" Style="{StaticResource MyCustomTextBlock}" Text="5. Нужды для приюта" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="FinanceButton" Style="{StaticResource MyCustomButton}" Click="FinanceButton_Click">
                    <Image Source="Images/icon_finance.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="FinanceBlock" Style="{StaticResource MyCustomTextBlock}" Text="6. Финансовый учет" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="VacinButton" Style="{StaticResource MyCustomButton}" Click="VacinButton_Click">
                    <Image Source="Images/icon_vaccination.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="VacinBlock" Style="{StaticResource MyCustomTextBlock}" Text="7. График вакцинаций" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="ParasiteButton" Style="{StaticResource MyCustomButton}" Click="ParasiteButton_Click">
                    <Image Source="Images/icon_parasite.png" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="ParasiteBlock" Style="{StaticResource MyCustomTextBlock}" Text="8. Обработка" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="WalkingButton" Style="{StaticResource MyCustomButton}" Click="WalkingButton_Click">
                    <Image Source="Images/icon_walking.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="WalkingBlock" Style="{StaticResource MyCustomTextBlock}" Text="9. График выгулов" />
            </StackPanel>
            <StackPanel Margin="5">
                <Button Name="EventButton" Style="{StaticResource MyCustomButton}" Click="EventButton_Click">
                    <Image Source="Images/icon_event.jpg" Width="50" Height="50" Stretch="Uniform" />
                </Button>
                <TextBlock x:Name="EventBlock" Style="{StaticResource MyCustomTextBlock}" Text="10. Мероприятия" />
            </StackPanel>
        </UniformGrid>

        <StackPanel Style="{StaticResource MyCustomStack2}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="BackButton" Style="{StaticResource MyCustomButton}" Content="Назад" Click="Back_Click" Width="100" Height="50"/>
        </StackPanel>
    </Grid>
</Window>