<Page x:Class="Course_project.FinancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinancePage" IsVisibleChanged="FinancePage_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Для панели фильтров -->
            <RowDefinition Height="*"/>
            <!-- Для DataGrid -->
            <RowDefinition Height="73"/>
            <!-- Для кнопок -->
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="165"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchFinance" Grid.Column="0" HorizontalAlignment="Right" 
                         TextChanged="SearchFinance_TextChanged" Width="135"/>
                <TextBlock Text="Поиск по дате" Grid.Column="0" HorizontalAlignment="Left" FontSize="14"/>
                <ComboBox Name="SortFinance" Grid.Column="1" HorizontalAlignment="Right" 
                          SelectionChanged="SortFinance_SelectionChanged" Width="265">
                    <ComboBoxItem>По дате (новые)</ComboBoxItem>
                    <ComboBoxItem>По дате (старые)</ComboBoxItem>
                    <ComboBoxItem>По сумме (возрастание)</ComboBoxItem>
                    <ComboBoxItem>По сумме (убывание)</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Сортировать" Grid.Column="1" HorizontalAlignment="Left" FontSize="14"/>
                <Button x:Name="CleanFilter" Grid.Column="2" Content="Очистить фильтр" FontSize="10" 
                        Click="CleanFilter_OnClick"/>
            </Grid>
        </WrapPanel>

        <!-- DataGrid -->
        <DataGrid Style="{StaticResource MyCustomDataGrid}" Grid.Row="1" Name="DataGridFinance" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Дата" Binding="{Binding accounting_date}" />
                <DataGridTextColumn Header="Зарплата" Binding="{Binding salary}" />
                <DataGridTextColumn Header="Коммунальные услуги" Binding="{Binding utilities}" />
                <DataGridTextColumn Header="Налоги" Binding="{Binding taxes}" />
                <DataGridTextColumn Header="Затраты на лекарства" Binding="{Binding medicine_expenses}" />
                <DataGridTextColumn Header="Затраты на еду" Binding="{Binding food_expenses}" />
                <DataGridTextColumn Header="Затраты на прочие нужды" Binding="{Binding other_expenses}" />
                <DataGridTextColumn Header="Добровольные взносы" Binding="{Binding voluntary_contributions}" />
                <DataGridTextColumn Header="Итог" Binding="{Binding total}" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MyCustomButton}" Name="ButtonEdit" Content="Редактировать" 
                                Click="ButtonEdit_OnClick" Background="White" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки внизу -->
        <Grid Grid.Row="2">
            <!-- Кнопка "Добавить" -->
            <Button Style="{StaticResource MyCustomButton}" Name="ButtonAdd" Content="Добавить" 
                    HorizontalAlignment="Left" Click="ButtonAdd_OnClick" 
                    Width="133" />

            <!-- Кнопка "Last" справа от кнопки "Добавить" -->
            <Button Style="{StaticResource ArrowButtonLeftStyle}" Click="LastButton_Cick" 
                    HorizontalAlignment="Left" Width="100" Height="20" Margin="140,27,0,26"/>

            <!-- Кнопка "Next" слева от кнопки "Удалить" -->
            <Button Style="{StaticResource ArrowButtonStyle}" Click="NextButton_Cick" 
                    HorizontalAlignment="Right" Width="100" Height="20" Margin="0,27,140,26"/>

            <!-- Кнопка "Удалить" -->
            <Button Style="{StaticResource MyCustomButton}" Name="ButtonDel" Content="Удалить" 
                    HorizontalAlignment="Right" Click="ButtonDel_OnClick" 
                    Width="133" />

            <!-- Кнопка "Назад" -->
            <Button Style="{StaticResource MyCustomButton}" Content="Назад" Click="BackButton_Click" 
                    HorizontalAlignment="Center" Width="100" Height="30" />
        </Grid>
    </Grid>
</Page>