<Page x:Class="Course_project.DogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_project"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="Dog Page" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*" />
            <RowDefinition Height="73*" />
        </Grid.RowDefinitions>

        <DataGrid Style="{StaticResource MyCustomDataGrid}" Grid.Row="0" Name="DataGridDogs" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кличка" Binding="{Binding nickname}" />
                <DataGridTextColumn Header="Возраст" Binding="{Binding age}" />
                <DataGridTextColumn Header="Пол" Binding="{Binding gender}" />
                <DataGridTextColumn Header="Дополнительная информация" Binding="{Binding additional_information}" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MyCustomButton}" Name="ButtonEdit" Content="Редактировать" 
                                    Click="ButtonEdit_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Style="{StaticResource MyCustomButton}" Grid.Row="1" Name="ButtonAdd" Content="Добавить" 
                HorizontalAlignment="Left" Click="ButtonAdd_OnClick" 
                Width="133" />
        <Button Style="{StaticResource MyCustomButton}" Grid.Row="1" Name="ButtonDel" Content="Удалить" 
                HorizontalAlignment="Right" Click="ButtonDel_OnClick" 
                Width="133" />
        <Button Style="{StaticResource MyCustomButton}" Grid.Row="1" Content="Назад" Click="BackButton_Click" 
                HorizontalAlignment="Center" Width="100" Height="30" />
        <Button Style="{StaticResource ArrowButtonStyle}" Grid.Row="1" Click="NextButton_Cick" HorizontalAlignment="Left" Width="100" Height="20" Margin="567,27,0,26"/>
    </Grid>
</Page>