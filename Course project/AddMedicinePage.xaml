<Page x:Class="Course_project.AddMedicinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMedicinePage">

    <Grid Style="{StaticResource MyCustomGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Название лекарства" Grid.Row="0" Grid.Column="0" />
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Id собаки" Grid.Row="1" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Цена" Grid.Row="2" Grid.Column="0"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="0" Grid.Column="1" Text="{Binding name_of_medicine}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="1" Grid.Column="1" Text="{Binding dog_id}" Name="ComboBoxDogs"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="2" Grid.Column="1" Text="{Binding cost}"/>
        <!-- Кнопка "Сохранить" -->
        <Button Style="{StaticResource MyCustomButton}" Name="ButtonSave" Content="Сохранить" Grid.Row="6" Grid.Column="1" 
            Width="133" Click="ButtonSave_OnClick" HorizontalAlignment="Left" Margin="0,10,0,0"/>
    </Grid>
</Page>
