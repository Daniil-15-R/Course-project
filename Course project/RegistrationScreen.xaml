<Window x:Class="Course_project.RegistrationScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_project"
        mc:Ignorable="d"
        Title="RegistrationScreen" Height="450" Width="800">
    <Grid Background="#d0e6a3">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TextBlockTitle" FontSize="24" FontWeight="Bold" Text="Регистрация" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,20"/>

            <TextBlock x:Name="TextBlockLogin" Text="Имя: " HorizontalAlignment="Left" Grid.Row="1"/>
            <TextBox Name="NameText" Width="300" Grid.Row="1" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockSurname" Text="Фамилия: " HorizontalAlignment="Left" Grid.Row="2"/>
            <TextBox Name="Surnametext" Width="300" Grid.Row="2" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockLog" Text="Логин: " HorizontalAlignment="Left" Grid.Row="3"/>
            <TextBox Name="LogText" Width="300" Grid.Row="3" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockRole" Text="Роль: " HorizontalAlignment="Left" Grid.Row="4"/>
            <TextBox Name="RoleText" Width="300" Grid.Row="4" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockPas" Text="Пароль: " HorizontalAlignment="Left" Grid.Row="5"/>
            <PasswordBox Name="PasswordTextBox" Width="300" Grid.Row="5" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockEmail" Text="Email: " HorizontalAlignment="Left" Grid.Row="6"/>
            <TextBox Name="EmailText" Width="300" Grid.Row="6" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockPhone" Text="Телефон: " HorizontalAlignment="Left" Grid.Row="7"/>
            <TextBox Name="PhoneText" Width="300" Grid.Row="7" Grid.Column="1"/>

            <TextBlock x:Name="TextBlockData" Text="Дата рождения: " HorizontalAlignment="Left" Grid.Row="8"/>
            <DatePicker Name="DataPicker" Width="300" Grid.Row="8" Grid.Column="1" IsEnabled="False"/>

            <TextBlock x:Name="TextBlockSNILS" Text="Паспорт: " HorizontalAlignment="Left" Grid.Row="9"/>
            <TextBox Name="TextSNILS" Width="300" Grid.Row="9" Grid.Column="1" IsEnabled="False"/>
            
            <TextBlock x:Name="TextBlockPassport" Text="СНИЛС: " HorizontalAlignment="Left" Grid.Row="10"/>
            <TextBox Name="TextPassport" Width="300" Grid.Row="10" Grid.Column="1" IsEnabled="False"/>

            <TextBlock x:Name="TextBlockCar" Text="Номерной знак автомобиля: " HorizontalAlignment="Left" Grid.Row="11"/>
            <TextBox Name="TextCar" Width="300" Grid.Row="11" Grid.Column="1" IsEnabled="False"/>

            <TextBlock x:Name="TextBlockAddress" Text="Адрес проживания: " HorizontalAlignment="Left" Grid.Row="12"/>
            <TextBox Name="TextAddress" Width="300" Grid.Row="12" Grid.Column="1" IsEnabled="False"/>

            <!-- Чек бокс для полной регистрации -->
            <CheckBox x:Name="FullRegistrationCheckbox" Content="Полная регистрация" 
                      Grid.Row="13" Grid.ColumnSpan="2" HorizontalAlignment="Center" 
                      Margin="0,20,0,0"
                      ToolTip="Если вы хотите зарегистрироваться, чтобы работать в приюте, активируйте данную кнопку"
                      Checked="FullRegistrationCheckbox_Checked" Unchecked="FullRegistrationCheckbox_Unchecked"/>

            <!-- StackPanel для кнопок -->
            <StackPanel Orientation="Horizontal" Grid.Row="14" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="RegisterButton" Content="Зарегистрировать" Width="100" Margin="0,0,10,0" Click="RegisterButton_Click"/>
                <Button x:Name="BackButton" Content="Назад" Width="100" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>