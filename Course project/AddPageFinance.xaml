<Window x:Class="Course_project.AddPageFinance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_project"
        mc:Ignorable="d"
        Title="AddPageFinance" Height="450" Width="800">
    <Grid Style="{StaticResource MyCustomGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Id" Grid.Row="0" Grid.Column="0" />
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Дата" Grid.Row="1" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Зарплата" Grid.Row="2" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Коммунальные услуги" Grid.Row="3" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Налоги" Grid.Row="4" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Затраты на лекарство" Grid.Row="5" Grid.Column="0" />
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Затраты на еду" Grid.Row="6" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Затраты на прочие нужды" Grid.Row="7" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Добровольный взнос" Grid.Row="8" Grid.Column="0"/>
        <TextBlock Style="{StaticResource MyCustomTextBlock}" Text="Итог" Grid.Row="9" Grid.Column="0"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="0" Grid.Column="1" Text="{Binding id}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="1" Grid.Column="1" Text="{Binding accounting_date}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="2" Grid.Column="1" Text="{Binding salary}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="3" Grid.Column="1" Text="{Binding utilities}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="4" Grid.Column="1" Text="{Binding taxes}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="5" Grid.Column="1" Text="{Binding medicine_expenses}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="6" Grid.Column="1" Text="{Binding food_expenses}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="7" Grid.Column="1" Text="{Binding other_expenses}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="8" Grid.Column="1" Text="{Binding voluntary_contributions}"/>
        <TextBox Style="{StaticResource MyCustomTextBox}" Grid.Row="9" Grid.Column="1" Text="{Binding total}"/>

        <!-- Кнопка "Сохранить" -->
        <Button Style="{StaticResource MyCustomButton}" Name="ButtonSave" Content="Сохранить" Grid.Row="10" Grid.Column="1" 
            Width="133" Click="ButtonSave_OnClick" HorizontalAlignment="Left" Margin="0,10,0,0"/>
    </Grid>
</Window>
